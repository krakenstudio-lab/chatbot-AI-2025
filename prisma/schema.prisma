generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Client {
  id             String       @id @default(cuid())
  name           String
  pwd            String       @db.VarChar(100)
  embedKey       String       @unique
  allowedOrigins String?      @db.LongText
  status         ClientStatus @default(active)
  createdAt      DateTime     @default(now())
  quotes         Quote[]
}

model Quote {
  id             String       @id @default(cuid())
  uid            String       @unique
  clientId       String
  customerName   String?
  customerEmail  String?
  customerPhone  String?
  siteUrl        String?
  package        String?
  subtotal       Decimal?     @db.Decimal(10, 2)
  discount       Decimal?     @db.Decimal(10, 2)
  total          Decimal?     @db.Decimal(10, 2)
  currency       String       @default("EUR")
  deliveryTime   String?
  validityDays   Int?
  quoteText      String       @db.LongText
  jsonFinal      String?      @db.LongText
  chatHistory    String?      @db.LongText
  status         QuoteStatus  @default(final)
  pdfGeneratedAt DateTime?
  ip             String?      @db.VarChar(45)
  userAgent      String?      @db.Text
  storedPdfId    String?
  createdAt      DateTime     @default(now())
  client         Client       @relation(fields: [clientId], references: [id])
  storedPdf      StoredPdfDb? @relation(fields: [storedPdfId], references: [id])

  @@index([clientId, createdAt])
  @@index([storedPdfId], map: "Quote_storedPdfId_fkey")
}

model StoredPdfDb {
  id          String   @id @default(cuid())
  filename    String
  contentType String   @default("application/pdf")
  bytes       Bytes
  size        Int
  chatId      String?
  createdAt   DateTime @default(now())
  Quote       Quote[]
}

model servizi {
  id          Int     @id @default(autoincrement())
  idCliente   Int?
  nome        String  @db.VarChar(50)
  flagActive  Int     @default(1)
  prezzo      String? @db.VarChar(255)
  descrizione String? @db.Text
}

enum ClientStatus {
  active
  disabled
}

enum QuoteStatus {
  draft
  final
  pdf_generated
  sent
  accepted
  rejected
}
