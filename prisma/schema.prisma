generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model StoredPdfDb {
  id          String   @id @default(cuid())
  filename    String
  contentType String   @default("application/pdf")
  bytes       Bytes // LONGBLOB
  size        Int
  chatId      String?
  createdAt   DateTime @default(now())
}
